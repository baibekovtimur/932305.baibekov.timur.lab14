@model Backend4.Models.Mockups.PersonalInfoViewModel
@{
    ViewData["Title"] = "Sign up";
    var now = DateTime.Now.Year;

    var days = Enumerable.Range(1, 31).ToList();
    var months = Enumerable.Range(1, 12).Select(i => new { Value = i, Text = System.Globalization.CultureInfo.GetCultureInfo("en-US").DateTimeFormat.GetMonthName(i)}).ToList();
    var years = Enumerable.Range(now - 100, 101).Reverse().ToList();
}

<h1>Sign up</h1>

<form asp-action="SignUp" method="post" class="mt-4" style="max-width: 480px;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">First name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Birthday</label>
        <div class="form-row">
            <div class="col">
                <select asp-for="BirthDay" class="form-control">
                    <option value="0">Day</option>
                    @foreach (var d in days)
                    {
                        <option value="@d">@d</option>
                    }
                </select>
                <span asp-validation-for="BirthDay" class="text-danger"></span>
            </div>
            <div class="col">
                <select asp-for="BirthMonth" class="form-control">
                    <option value="0">Month</option>
                    @foreach (var m in months)
                    {
                        <option value="@m.Value">@m.Text</option>
                    }
                </select>
                <span asp-validation-for="BirthMonth" class="text-danger"></span>
            </div>
            <div class="col">
                <select asp-for="BirthYear" class="form-control">
                    <option value="0">Year</option>
                    @foreach (var y in years)
                    {
                        <option value="@y">@y</option>
                    }
                </select>
                <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>
        </div>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Gender</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Gender" value="Male" id="g1">
            <label class="form-check-label" for="g1">Male</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Gender" value="Female" id="g2">
            <label class="form-check-label" for="g2">Female</label>
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Sign up</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
