@model Backend4.Models.Mockups.ConfirmCodeViewModel
@{
    ViewData["Title"] = "Confirm code";
}

<h1>Confirm code</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p class="text-muted">
    Code was “sent” to: <strong>@ViewBag.Email</strong><br />
    (Учебный проект: выводим код на странице) — <strong>@ViewBag.SentCode</strong>
</p>

<form asp-action="ForgotPasswordConfirm" method="post" class="mt-3" style="max-width: 240px;">
    <div class="form-group">
        <label asp-for="Code">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Confirm</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
