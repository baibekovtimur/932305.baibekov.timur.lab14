@model Backend4.Models.Controls.MonthSelectViewModel
@{
    ViewData["Title"] = "Drop-down List";
    var months = (string[])ViewBag.Months;
}

<h1>Drop-down List</h1>

<form asp-action="DropDownList" method="post" class="mt-4">
    <div class="form-group" style="max-width: 320px;">
        <label asp-for="Month">Month</label>
        <select asp-for="Month" class="form-control">
            @foreach (var m in months)
            {
                <option value="@m">@m</option>
            }
        </select>
        <span asp-validation-for="Month" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-secondary">Submit</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Month))
{
    <hr />
    <div><strong>Month</strong> &nbsp;&nbsp; @Model.Month</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
