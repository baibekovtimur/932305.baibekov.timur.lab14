@model Backend4.Models.Controls.ListBoxViewModel
@{
    ViewData["Title"] = "List Box";
    var months = (string[])ViewBag.Months;
}

<h1>List Box</h1>

<form asp-action="ListBox" method="post" class="mt-4">
    <div class="form-group" style="max-width: 320px;">
        <label asp-for="Month">Months</label>
        <select asp-for="Month" class="form-control" size="6">
            @foreach (var m in months)
            {
                <option value="@m">@m</option>
            }
        </select>
        <span asp-validation-for="Month" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-secondary">Submit</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Month))
{
    <hr />
    <div><strong>Months</strong> &nbsp;&nbsp; @Model.Month</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
